<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_column="0"
        android:layout_row="0">

        <TextView
            android:id="@+id/character_race_title"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:text="Race:"/>

        <TextView
            android:id="@+id/character_race"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"/>

        <TextView
            android:id="@+id/character_class_name"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:text="Class:"/>

        <TextView
            android:id="@+id/character_class"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"/>
    </LinearLayout>



    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:columnCount="6"
        android:rowCount="7"
        >
        <TextView
            android:id="@+id/character_abil_title"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/abil_title"
            android:layout_gravity="center_horizontal"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="1"
            android:layout_row="0"
            />


        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/Str"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="end"
            />

        <TextView
            android:id="@+id/character_abil_str"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="1"
            android:layout_row="1"
            />

        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/Con"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_gravity="end"
            />

        <TextView
            android:id="@+id/character_abil_con"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="3"
            android:layout_row="1"
            />

        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/Dex"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="end"
            />

        <TextView
            android:id="@+id/character_abil_dex"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="1"
            android:layout_row="2"
            />

        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/Int"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="end"
            />

        <TextView
            android:id="@+id/character_abil_int"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="3"
            android:layout_row="2"
            />

        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/Wis"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="end"
            />

        <TextView
            android:id="@+id/character_abil_wis"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="1"
            android:layout_row="3"
            />

        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/Cha"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_gravity="end"
            />

        <TextView
            android:id="@+id/character_abil_cha"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="3"
            android:layout_row="3"
            />

        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/initiative"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="1"
            android:layout_row="4"
            />

        <TextView
            android:id="@+id/character_detail_initiative"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="2"
            android:layout_row="4"
            />

        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/hitpoints"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="1"
            android:layout_row="5"
            />

        <TextView
            android:id="@+id/character_detail_hp"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="2"
            android:layout_row="5"
            />

        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/speed"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="1"
            android:layout_row="6"
            />

        <TextView
            android:id="@+id/character_detail_spd"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"

            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="2"
            android:layout_row="6"
            />

    </GridLayout>

    <TextView
        android:id="@+id/character_def_title"
        style="@style/Base.DialogWindowTitle.AppCompat"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/def_title"
        android:layout_gravity="center_horizontal"
        
        tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
        android:layout_column="1"
        android:layout_row="0"
        />

    <include layout="@layout/defense_layout"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        />




</GridLayout>
