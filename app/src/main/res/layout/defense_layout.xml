<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        style="?android:attr/textAppearanceListItemSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:text="AC:"

        android:layout_row="0"
        android:layout_column="0"
        />
    <TextView
        android:id="@+id/character_abil_ac"
        style="?android:attr/textAppearanceListItemSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="center_vertical"

        android:layout_row="0"
        android:layout_column="1"
        />

    <include
        layout="@layout/modifier_table"
        android:id="@+id/ac_mod_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        />
    <TextView
        style="?android:attr/textAppearanceListItemSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="FORT:"

        android:layout_row="1"
        android:layout_column="0"

        />

    <TextView
        android:id="@+id/character_abil_fort"
        style="?android:attr/textAppearanceListItemSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"

        android:layout_row="1"
        android:layout_column="1"

        />

    <include
        layout="@layout/modifier_table"
        android:id="@+id/fort_mod_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        />

    <TextView
        style="?android:attr/textAppearanceListItemSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="REF:"

        android:layout_row="2"
        android:layout_column="0"

        />

    <TextView
        android:id="@+id/character_abil_ref"
        style="?android:attr/textAppearanceListItemSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"

        android:layout_row="2"
        android:layout_column="1"

        />

    <include
        layout="@layout/modifier_table"
        android:id="@+id/ref_mod_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        />

    <TextView
        style="?android:attr/textAppearanceListItemSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="WILL:"

        android:layout_row="3"
        android:layout_column="0"
        />
    
    <TextView
        android:id="@+id/character_abil_wil"
        style="?android:attr/textAppearanceListItemSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"

        android:layout_row="3"
        android:layout_column="1"
        />

    <include
        layout="@layout/modifier_table"
        android:id="@+id/will_mod_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="2"
        />

</GridLayout>