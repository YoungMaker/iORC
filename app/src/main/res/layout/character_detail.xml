<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:columnCount="1"
        android:rowCount="4"
        android:layout_gravity="end"
        android:background="@drawable/layer_border">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="0">
        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:text="AC:"
            />
        <TextView
            android:id="@+id/character_abil_ac"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12.5dp"
            android:paddingEnd="0dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/shield_outline"
            android:width="45dp"
            />

        </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        >
        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="12.5dp"
            android:text="@string/initiative"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            />

        <TextView
            android:id="@+id/character_detail_initiative"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            />
    </LinearLayout>
    </GridLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:columnCount="1"
        android:rowCount="4"
        android:layout_gravity="start"
        android:background="@drawable/layer_border_flipped">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            >
        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/hitpoints"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            />

        <TextView
            android:id="@+id/character_detail_hp"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12.5dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="12.5dp"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:background="@drawable/heart_outline"
            android:width="45dp"
            />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            >
        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/speed"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            />

        <TextView
            android:id="@+id/character_detail_spd"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            />
        </LinearLayout>
    </GridLayout>


    <TextView
        android:id="@+id/character_abil_title"
        style="@style/Base.DialogWindowTitle.AppCompat"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="5dp"
        android:text="@string/abil_title"
        android:layout_gravity="center_horizontal"
        tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
        android:layout_column="0"
        android:layout_row="3"
        />

    <TextView
        android:id="@+id/character_stat_title"
        style="@style/Base.DialogWindowTitle.AppCompat"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/stats_title"
        android:layout_gravity="start"
        tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
        android:layout_column="1"
        android:layout_row="1"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:columnCount="6"
        android:rowCount="4"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border"
        >

        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/stat_padding"
            android:text="@string/Str"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity=""
            />

        <TextView
            android:id="@+id/character_abil_str"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="1"
            android:layout_row="0"
            />

        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/stat_padding"
            android:text="@string/Con"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="2"
            android:layout_row="0"
            />

        <TextView
            android:id="@+id/character_abil_con"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="3"
            android:layout_row="0"
            />

        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/stat_padding"
            android:text="@string/Dex"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="0"
            android:layout_row="1"
            />

        <TextView
            android:id="@+id/character_abil_dex"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="1"
            android:layout_row="1"
            />

        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/stat_padding"
            android:text="@string/Int"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="2"
            android:layout_row="1"
            />

        <TextView
            android:id="@+id/character_abil_int"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="3"
            android:layout_row="1"
            />

        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/stat_padding"
            android:text="@string/Wis"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="0"
            android:layout_row="2"
            />

        <TextView
            android:id="@+id/character_abil_wis"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="1"
            android:layout_row="2"
            />

        <TextView
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/stat_padding"
            android:text="@string/Cha"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="2"
            android:layout_row="2"
            />

        <TextView
            android:id="@+id/character_abil_cha"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:layout_column="3"
            android:layout_row="2"
            />

    </GridLayout>

    <TextView
        android:id="@+id/character_def_title"
        style="@style/Base.DialogWindowTitle.AppCompat"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="5dp"
        android:text="@string/saving_throws_title"
        android:layout_gravity="center_horizontal"
        tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
        android:layout_column="1"
        android:layout_row="3"
        />

    <include layout="@layout/defense_layout"
        android:layout_column="1"
        android:layout_row="4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_column="0"
        android:layout_row="0">

        <TextView
            android:id="@+id/character_race_title"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:text="@string/race"/>

        <Button
            android:id="@+id/character_race"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="start"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text=""
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            />

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:layout_column="1"
        android:layout_row="0">
        <TextView
            android:id="@+id/character_class_name"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            android:text="@string/Class"/>

        <Button
            android:id="@+id/character_class"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="start"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text=""
            tools:context="edu.ycp.cs482.iorc.Fragments.MasterFlows.CharacterDetailFragment"
            />

    </LinearLayout>
</GridLayout>
